podTemplate(yaml: """
kind: Pod
spec:
  containers:
    - name: app
      image: docker-registry:5000/intermittency:${env.TAG}
      command: ['/bin/cat']
      tty: true
      envFrom:
        - secretRef:
            name: intermittency-${env.BRANCH_NAME}
"""
) {
  node(POD_LABEL) {
    container('app') {
      stage('createdb_copy') {
        sh 'cd /app ; make createdb_copy'
      }
      stage('pgrestore_clean') {
        sh 'cd /app ; make pgrestore_clean'
      }
      stage('pgrestore_swap') {
        sh 'cd /app ; make pgrestore_swap'
      }
    }
  }
}
